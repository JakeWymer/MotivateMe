<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jakey.motivateme.LogTodayStats">

    <Button
        android:background="@drawable/style_button"
        style="@style/button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Log"
        android:id="@+id/addglogbtt"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:enabled="true"
        android:onClick="addLog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight:"
        android:id="@+id/weighttxt"
        android:paddingTop="125dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weightinput"
        android:clickable="true"
        android:editable="true"
        android:inputType="number"
        android:singleLine="true"
        android:enabled="true"
        android:layout_toEndOf="@+id/weighttxt"
        android:layout_alignBottom="@+id/weighttxt"
        android:layout_toRightOf="@+id/weighttxt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Diet:"
        android:id="@+id/diettxt"
        android:paddingTop="15dp"
        android:layout_below="@+id/weighttxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Workout:"
        android:id="@+id/WOtxt"
        android:paddingTop="15dp"
        android:layout_below="@+id/diettxt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:id="@+id/radioGroupWO"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation='horizontal'
        android:layout_toEndOf="@+id/WOtxt"
        android:layout_toRightOf="@+id/WOtxt"
        android:layout_alignBottom="@+id/WOtxt">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/YesWOButton"
            android:layout_toEndOf="@+id/WOtxt"
            android:layout_alignBottom="@+id/WOtxt"
            android:layout_toRightOf="@+id/WOtxt"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/NoWObutton"
            android:layout_toEndOf="@+id/YesWOButton"
            android:checked="false"
            android:layout_alignBottom="@+id/YesWOButton"
            android:layout_toRightOf="@+id/YesWOButton" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroupDiet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation='horizontal'
        android:layout_toEndOf="@+id/diettxt"
        android:layout_toRightOf="@+id/diettxt"
        android:layout_alignBottom="@+id/diettxt">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:id="@+id/goodButton"
            android:layout_toEndOf="@+id/diettxt"
            android:layout_alignBottom="@+id/diettxt"
            android:layout_toRightOf="@+id/diettxt"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal"
            android:id="@+id/normalDietButton"
            android:layout_toEndOf="@+id/goodButton"
            android:checked="false"
            android:layout_alignBottom="@+id/diettxt"
            android:layout_toRightOf="@+id/goodButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad"
            android:id="@+id/badDietButton"
            android:layout_toEndOf="@+id/normalDietButton"
            android:checked="false"
            android:layout_alignBottom="@+id/diettxt"
            android:layout_toRightOf="@+id/normalDietButton" />

    </RadioGroup>

</RelativeLayout>
