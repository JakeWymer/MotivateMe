<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.jakey.motivateme.Goals">
    <Button
        android:background="@drawable/style_button"
        style="@style/button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log Today"
        android:id="@+id/addgoalbtt"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.02"
        android:enabled="true"
        android:onClick="changeToAddLog"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_log"
        android:layout_below="@+id/titleTxtTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/addgoalbtt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/titleTxtDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="82dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Weight"
        android:id="@+id/titleTxtTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/titleTxtDate"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Diet"
        android:id="@+id/DateTxtTitle"
        android:layout_alignTop="@+id/titleTxtTitle"
        android:layout_toRightOf="@+id/titleTxtTitle"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="workout"
        android:id="@+id/workoutTxtTitle"
        android:layout_alignTop="@+id/DateTxtTitle"
        android:layout_toRightOf="@+id/DateTxtTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_marginLeft="40dp"
        />


</RelativeLayout>
